<div class="row">
    <div class="col-sm-6 col-md-6 col-md-6 col-md-offset-3 col-sm-offset-3">
       
       <ul class="list-group">
        <% products.forEach((product)=>{%>
        <li class="list-group-item">
            
            <span class="badge text-bg-secondary ">$<%= product.Cost %></span>
